<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="#292c30"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LayoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/LayoutPantalla"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="10dp"
                android:text="000000000"
                android:textAlignment="gravity"
                android:textColor="#EBF0F6"
                android:textSize="60sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutBotonera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/boton_C"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6A6A6A"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="C"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="7"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="4"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="1"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_coma"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="."
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/boton_del"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6A6A6A"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    app:cornerRadius="10dp"
                    app:icon="@android:drawable/ic_input_delete"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconSize="24dp"
                    app:iconTint="#FFFFFF"
                    app:iconTintMode="src_atop" />

                <Button
                    android:id="@+id/boton_8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="8"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="5"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="2"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="0"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/boton_dividir"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="/"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="9"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="6"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="3"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_elevado"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#323538"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="**"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/boton_multiplicar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="*"
                    android:textSize="24dp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_restar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="-"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_sumar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="+"
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/boton_igual"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:backgroundTint="#4CAF50"
                    android:scaleX="0.92"
                    android:scaleY="1"
                    android:text="="
                    android:textSize="24sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>